<Grid x:Class="Lieferliste_WPF.Views.UserSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True"
      Height="600" Width="1000" Tag="{Binding Title}" >

    <Grid Background="{StaticResource Background1}">
        <StackPanel>
        <Menu Style="{DynamicResource MaterialDesignMenu}">
            <MenuItem Header="Speichern" Command="{Binding SaveCommand}" />
                <MenuItem Header="Reset" Command="{Binding ResetCommand}" />
            </Menu>
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="EXPLORER" HorizontalAlignment="Center" Background="BlanchedAlmond"/>
            <TextBlock Grid.Column="2" Text="STEUERUNG" HorizontalAlignment="Center" Background="BlanchedAlmond"/>
            <StackPanel Grid.Row="1">
                <Label Content="Hauptpfad"/>
                <TextBox x:Name="ExpRoot" Text="{Binding Path=ExplorerRoot}"/>

                <Label Content="Muster für Ordnerpfad:"/>
                <TextBox x:Name="OrderPath" Text="{Binding Path=ExplorerPathPattern}"/>
            </StackPanel>
            <Rectangle Grid.Column="1" Grid.RowSpan="2" Fill="BlueViolet"/>

            <StackPanel Grid.Row="1" Grid.Column="2" >
                    <materialDesign:Chip >
                        <StackPanel Orientation="Horizontal" >
                        <Label Content="AutoSave"/>
                        <ToggleButton IsChecked="{Binding AutoSave}" ToolTip="automatisch speichern" />
                        </StackPanel>
                    </materialDesign:Chip>
                    <materialDesign:Chip>
                        <StackPanel Orientation="Horizontal">
                        <Label Content="Save Message"/>
                        <ToggleButton IsChecked="{Binding SaveMessage}" ToolTip="beim schliessen nachfragen" />
 
                        </StackPanel>
                    </materialDesign:Chip>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Grid>
