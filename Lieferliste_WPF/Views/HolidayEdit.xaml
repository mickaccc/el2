<UserControl x:Class="Lieferliste_WPF.Views.HolidayEdit"
             xml:lang="de-AT"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:local="clr-namespace:Lieferliste_WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl>
            <TabItem Header="Schließtage">
                <ListBox ItemsSource="{Binding CloseHolidays}"/>
            </TabItem>
            <TabItem Header="fixe Feiertage">
                <ListBox ItemsSource="{Binding FixHolidays}"/>
            </TabItem>
            <TabItem Header="flexible Feiertage">
                <ListBox ItemsSource="{Binding VarHolidays}"/>
            </TabItem>
        </TabControl>
            
    </Grid>
</UserControl>
