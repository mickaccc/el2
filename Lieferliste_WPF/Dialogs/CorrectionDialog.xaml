<UserControl x:Class="Lieferliste_WPF.Dialogs.CorrectionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lieferliste_WPF.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label Content="Korrekturwert in Stunden eingeben:"/>
            <TextBox x:Name="correct" Text="{Binding CorrectValue}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="abbrechen" Command="{Binding CloseDialogCommand}"/>
            <Button Content="OK" Command="{Binding CloseDialogCommand}" CommandParameter="1"/>
        </StackPanel>
            
    </Grid>
</UserControl>
