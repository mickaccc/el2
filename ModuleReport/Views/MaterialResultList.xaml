<UserControl x:Class="ModuleReport.Views.MaterialResultList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:local="clr-namespace:ModuleReport.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MaxHeight="400">
    <Grid>

   
        <Grid.RowDefinitions>
            <RowDefinition Height="300*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DataGrid GridLinesVisibility="Vertical" x:Name="DGMaterials" LayoutUpdated="DG_LayoutUpdated" ItemsSource="{Binding Materials}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Width="Auto" Header="Material" Binding="{Binding TTNR}" />
                <DataGridTextColumn Width="Auto" Header="Bezeichnung" Binding="{Binding Description}" />
                <DataGridTextColumn Width="Auto" Header="Auftrag" Binding="{Binding Order}" />
                <DataGridTextColumn Width="Auto" Header="Vorg" Binding="{Binding ProcessNr}"/>
                <DataGridTextColumn Width="Auto" Header="Rückmeldung" Binding="{Binding Date_Time}"/>
                <DataGridTextColumn Width="Auto" Header="Gut" Binding="{Binding Yield}"/>
                <DataGridTextColumn Width="Auto" Header="Auss" Binding="{Binding Scrap}"/>
                <DataGridTextColumn Width="Auto" Header="NA" Binding="{Binding Rework}"/>

            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Background="GhostWhite">
            <TextBlock x:Name="lblTotal" TextAlignment="Right" FontWeight="Bold">Gesamt:</TextBlock>
            <TextBlock x:Name="lblTotalYieldSum" TextAlignment="Right" FontWeight="Bold" Text="{Binding YieldSum}" />
            <TextBlock x:Name="lblTotalScrapSum" TextAlignment="Right" FontWeight="Bold" Text="{Binding ScrapSum}"/>
            <TextBlock x:Name="lblTotalReworkSum" TextAlignment="Right" FontWeight="Bold" Text="{Binding ReworkSum}"/>
        </StackPanel>

    </Grid>
</UserControl>
