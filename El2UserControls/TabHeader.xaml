<UserControl x:Class="El2UserControls.TabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:El2UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="100" x:Name="tbh" >
    <Grid>
        <DockPanel >
            <TextBlock x:Name="HeaderTextBox" Text="{Binding HeaderText, ElementName=tbh, Mode=OneWay}" Margin="0,0,2,0"/>
            <Button DockPanel.Dock="Right" Width="15" Command="{Binding TabCloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=TabItem}}">
                <Image  Source="/Images/OrangeCross32.png" />
            </Button>
        </DockPanel>
    </Grid>
</UserControl>
