<Window x:Class="ModuleProducts.Dialogs.ArchivProcessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModuleProducts.Dialogs"
        xmlns:conv="clr-namespace:El2Core.Converters;assembly=El2Core"
        mc:Ignorable="d"
        Title="ArchivProcessDialog" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <conv:BooleanToVisibilityConverter x:Key="boolToVis"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Archivierung" TextElement.FontSize="30" TextElement.FontWeight="Bold" TextAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="noch zu verarbeitende Datensätze:"/>
            <TextBlock Grid.Column="1" Text="{Binding ArchivProcessingCount}" Margin="10,0,0,0"/>

            <TextBlock Grid.Row="1"  Text="Archiviert:"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ArchivatedCount}" Margin="10,0,0,0"/>

            <TextBlock Grid.Row="2" Text="keine Dateien:"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ArchivState2Count}" Margin="10,0,0,0"/>

            <TextBlock Grid.Row="3" Text="kein Ordner:"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ArchivState3Count}" Margin="10,0,0,0"/>

            <TextBlock Grid.Row="4" Text="keine Regel:"/>
            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ArchivState4Count}" Margin="10,0,0,0"/>

            <DockPanel Grid.Row="5" Grid.ColumnSpan="2">
                <TextBlock Text="Process ist abgeschlossen!" TextElement.FontSize="18" TextElement.FontWeight="DemiBold"
                           TextElement.FontStretch="Expanded" VerticalAlignment="Center"
                           Visibility="{Binding ArchivComplete, Converter={StaticResource boolToVis}}"/>
                <Button Content="schliessen" Command="{Binding DialogCloseCommand}" HorizontalAlignment="Right"/>
            </DockPanel>
        </Grid>

    </Grid>
</Window>
