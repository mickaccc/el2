<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfCustomControlLibrary">
    <Style TargetType="{x:Type local:CommentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CommentControl}">
                    <Grid>
                        <Canvas x:Name="PART_CanvasSize">
                            <Label  x:Name="PART_CommentInfo" Content="{TemplateBinding HeaderText}"
                                    Background="LightYellow"
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                    Padding="5" FontSize="{TemplateBinding FontSize}"
                                    Width="{TemplateBinding Width}" Height="30"/>
                            <TextBox  x:Name="PART_TextBox" Canvas.Top="30" Text="{TemplateBinding CommentText}"
                                    Background="Transparent" Padding="2" FontSize="{TemplateBinding FontSize}"
                                    Width="{TemplateBinding Width}" IsEnabled="False"
                                    TextWrapping="Wrap" AcceptsReturn="True" TextAlignment="Left"
                                    VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>