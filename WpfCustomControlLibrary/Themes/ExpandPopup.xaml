<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfCustomControlLibrary">
    <Style TargetType="{x:Type local:ExpandPopup}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ExpandPopup}">
                    <Canvas>
                        <Expander IsExpanded="{TemplateBinding IsOpen}"/>
                        <Popup Canvas.Top="30" IsOpen="{TemplateBinding IsOpen}">
                            <DataGrid ItemsSource="{TemplateBinding ItemsSource}"/>
                        </Popup>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
    
</ResourceDictionary>