<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfCustomControlLibrary">
    <Style TargetType="{x:Type local:SearchableComboBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SearchableComboBox}">
                    <ContentControl HorizontalContentAlignment="Stretch">
                        <StackPanel>
                            <TextBox x:Name="PART_SearchBox"/>
                            <Popup x:Name="PART_ItemsBox" Visibility="{TemplateBinding BoxIsVisible}">
                                <DataGrid ItemsSource="{TemplateBinding ItemsSource}">
                                    
                                </DataGrid>
                            </Popup>
                        </StackPanel>
                    </ContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>