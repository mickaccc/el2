<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lieferliste_WPF.View"
      xmlns:UserControls="clr-namespace:Lieferliste_WPF.UserControls"
    xmlns:ViewModels="clr-namespace:Lieferliste_WPF.ViewModels"
    xmlns:conv="clr-namespace:Lieferliste_WPF.myConverters"
    xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
    x:Class="Lieferliste_WPF.View.Lieferliste"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lieferliste">

    <Grid x:Name="LieferGrid">
        <ListView x:Name="Lieferlist" ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <UserControls:LieferlisteControl Background="Bisque" DataContext="{Binding Mode=OneWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListView>
    </Grid>
</Page>
